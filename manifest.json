{
    "manifest_version": 3,
    "name": "Chat Begone",
    "version": "1.0",
    "description": "Hides embedded Twitch chat overlays in YouTube VODs.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}